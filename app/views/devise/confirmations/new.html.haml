.text-center
  %h2= t('.resend_confirmation_instructions')

= simple_form_for resource, as: resource_name, url: confirmation_path(resource_name),
  html: { method: :post, class: "general-form" },
  defaults: { label_html: { class: 'control-label input-label' } } do |f|

  .form-group.mb-25
    = f.input :email, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)

  = f.button :submit, t('.resend_confirmation_instructions'),
             class: "btn btn-default center-block mb-20"

  .text-center
    = render "devise/shared/links"
