.text-center
  %h3.general-login-title= t '.set_new_password'

= simple_form_for resource, as: resource_name, url: password_path(resource_name),
          html: { method: :put, class: 'general-form' },
          defaults: { label_html: { class: 'control-label input-label' } } do |f|
  = f.input :reset_password_token, as: :hidden
  .form-group.mb-30
    = f.input :password, autofocus: true
  .form-group.mb-40
    = f.input :password_confirmation

  = f.button :submit, t('.change'), class: "btn btn-default center-block mb-20"

  .text-center
    = render "devise/shared/links"
