%footer.navbar-inverse
  .container
    .row
      .col-sm-9
        %ul.list-inline.general-align.mb-25
          %li= link_to t('layouts.application.home'), root_path, class: 'nav-link'
          %li= link_to t('layouts.application.shop'), books_path, class: 'nav-link'
          - if user_signed_in?
            %li= link_to t('layouts.application.orders'), orders_path, class: 'nav-link'
            %li= link_to t('layouts.application.settings'), settings_edit_path, class: 'nav-link'
      .col-sm-3
        %p.general-nav-mail= t '.support'
        %p.general-nav-number= t '.phone_number'
        %ul.list-inline.general-align
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-facebook{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-twitter{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-google-plus{'aria-hidden': "true"}
          %li
            %a.nav-link{href: "#"}
              %i.fa.fa-instagram{'aria-hidden': "true"}
