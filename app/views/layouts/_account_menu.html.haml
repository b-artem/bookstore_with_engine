- if user_signed_in?
  %li.dropdown
    %a.dropdown-toggle{href: "#", 'data-toggle': "dropdown",
      role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
      = t 'layouts.application.my_account'
    %ul.dropdown-menu
      %li= link_to t('layouts.application.orders'), orders_path
      %li= link_to t('layouts.application.settings'), settings_edit_path
      %li.divider{role: "separator"}
      %li= link_to t('layouts.application.logout'), destroy_user_session_path, method: :delete
- else
  %li= link_to t('devise.sessions.new.sign_in'), new_user_session_path
  %li= link_to t('devise.shared.links.sign_up'), new_user_registration_path
