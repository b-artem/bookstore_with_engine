- @best_sellers.each do |bestseller|
  .col-sm-6.col-md-3
    .general-thumb-wrap
      .thumbnail.general-thumbnail
        = image_tag bestseller.cover_image,
                    class: 'img-shadow general-thumbnail-img', alt: "design-book"
        .thumb-hover
          .general-thumb-link-wrap
            = link_to book_path(bestseller), id: "book-view-#{bestseller.id}",
                      class: 'thumb-hover-link' do
              %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
            = link_to shopping_cart.line_items_path(product_id: bestseller.id, quantity: 1),
                      id: "add-book-#{bestseller.id}-to-cart",
                      method: :post, class: 'thumb-hover-link' do
              %i.fa.fa-shopping-cart.thumb-icon
    .mb-35
      .clearfix
        %p.pull-right.font-16.in-gold-500= bestseller.decorate.price
        %p.title.mr-55= bestseller.title
      %span.divider-sm
      %p.lead.small= bestseller.decorate.authors_names
